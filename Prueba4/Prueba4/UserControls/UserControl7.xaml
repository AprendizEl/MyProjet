        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="170"/>
        </Grid.RowDefinitions>



        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="610"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="2" BorderThickness="2" CornerRadius="10" Margin="10"  >
                <Border.BorderBrush>
                    <SolidColorBrush Color="{StaticResource winBorderColor1}" />
                </Border.BorderBrush>

                <Border.Background>
                    <SolidColorBrush Color="{StaticResource primaryBackColor1}"/>
                </Border.Background>



                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" >
                        <Label Content="LEYENDA" VerticalAlignment="Center" Foreground="White" FontFamily="Montserrat"  HorizontalAlignment="Center" FontSize="17" />
                    </Grid>

                    <Border Grid.Row="1"  CornerRadius="10" Margin="10"  >
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{StaticResource primaryBackColor1}" />
                        </Border.BorderBrush>

                        <Border.Background>
                            <SolidColorBrush Color="{StaticResource  primaryBackColor2}"/>
                        </Border.Background>

                        <ListBox Name="LB_P" >
                            <ListBoxItem>

                                <StackPanel Orientation="Vertical">
                                    <Grid Grid.Row="1"  VerticalAlignment="Center" Margin="-5" >
                                        <Label Content="Victoria" Foreground="{StaticResource color1}" FontSize="16" ForceCursor="True" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="20, 0,0,0">
                                        <Grid Grid.Row="1"  VerticalAlignment="Center" >
                                            <Label Content="Fiddlestick" Foreground="Gray" ForceCursor="True"  />
                                        </Grid>
                                        <Grid Grid.Row="1"  VerticalAlignment="Center"  >
                                            <Label Content="2/0/19" Foreground="Gray" ForceCursor="True" FontSize="9"  />
                                        </Grid>
                                        
                                    </StackPanel>                                    

                                </StackPanel>                               

                            </ListBoxItem>

                            <ListBoxItem>

                                <StackPanel Orientation="Vertical">
                                    <Grid Grid.Row="1"  VerticalAlignment="Center" Margin="-5" >
                                        <Label Content="Derrota" Foreground="{StaticResource color7}" FontSize="16" ForceCursor="True" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="20, 0,0,0">
                                        <Grid Grid.Row="1"  VerticalAlignment="Center" >
                                            <Label Content="Fiddlestick" Foreground="Gray" ForceCursor="True"  />
                                        </Grid>
                                        <Grid Grid.Row="1"  VerticalAlignment="Center"  >
                                            <Label Content="2/0/19" Foreground="Gray" ForceCursor="True" FontSize="9"  />
                                        </Grid>

                                    </StackPanel>

                                </StackPanel>

                            </ListBoxItem>

                            <ListBoxItem>

                                <local:UserControl12 />

                            </ListBoxItem>



                        </ListBox >


                    </Border>

                </Grid>

               



