            <Border Grid.Column="1" CornerRadius="20" Margin="10"  BorderThickness="2" Padding="5" >
                <Border.BorderBrush>
                    <SolidColorBrush Color="{StaticResource winBorderColor2}" />
                </Border.BorderBrush>
                <Border.Background>
                    <ImageBrush ImageSource="C:\Users\eecheto\Desktop\MyProjet\Prueba4\Prueba4\img\undefined - Imgur.png" />
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="500" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" >

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <faWPF:FontAwesome Icon="ArrowLeft" FontSize="34" Grid.Row="1" Cursor="Hand" />

                    </Grid>



                    <Grid Grid.Column="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <faWPF:FontAwesome Icon="ArrowRight" FontSize="34" Grid.Row="1" Cursor="Hand"  />

                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="100" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" VerticalAlignment="Stretch" >

                            <Label Content="Fiddlesticks" FontFamily="Montserrat" FontSize="30" Margin="10" Foreground="{StaticResource color2}" FontWeight="Medium" />

                        </Grid>


                        <Grid Grid.Row="1" VerticalAlignment="Stretch"  >
                            <lvc:CartesianChart Series="{Binding ChartBar}" LegendLocation="Right" Name="Grafic2" Foreground="{StaticResource color2}"  >
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Labels="{Binding LaBar}" Foreground="{StaticResource color2}" />
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </Grid>
                    </Grid>
                    


                </Grid>
                
            </Border>


            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" CornerRadius="20" Margin="10" >
                    <Border.BorderBrush>
                        <SolidColorBrush Color="Black" />
                    </Border.BorderBrush>
                    <Border.Background>
                        <SolidColorBrush Color="Transparent" />
                    </Border.Background>


                    <lvc:PieChart LegendLocation="Bottom" Hoverable="False" Margin="-4"  >
                        <lvc:PieChart.Series>
                            <lvc:PieSeries Title="Victorias" Values="2" DataLabels="True" Opacity="0.5" Fill="{StaticResource color1}" />
                            <lvc:PieSeries Title="Derrotas" Values="1" DataLabels="True" Opacity="0.5"    Fill="{StaticResource color7}"/>

                        </lvc:PieChart.Series>
                    </lvc:PieChart>

                    







                </Border>
                <Border Grid.Row="1" CornerRadius="20" Margin="10" >
                    <Border.BorderBrush>
                        <SolidColorBrush Color="Black" />
                    </Border.BorderBrush>
