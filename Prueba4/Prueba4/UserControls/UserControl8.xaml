<UserControl x:Class="Prueba4.UserControls.UserControl8"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prueba4.UserControls"
             
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <lvc:PieChart LegendLocation="Bottom" Hoverable="False" DataTooltip="{x:Null}">
            <lvc:PieChart.Series>
                <lvc:PieSeries Title="Win" Values="{Binding Series1}" DataLabels="True" Fill="{StaticResource color1}" Opacity="0.7"
                               LabelPoint="{Binding PointLabel}"/>
                <lvc:PieSeries Title="Derrota" Values="{Binding Series2}" DataLabels="True" Fill="#EEEEEE" Opacity="0.7"
                               LabelPoint="{Binding PointLabel}"/>

            </lvc:PieChart.Series>
        </lvc:PieChart>
    </Grid>
</UserControl>
