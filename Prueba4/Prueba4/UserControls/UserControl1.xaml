<UserControl x:Class="Prueba4.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prueba4"
             mc:Ignorable="d" 
             Height="auto" Width="auto">

    <Grid>
        <DataGrid x:Name="dataGrid" CanUserAddRows="True"  CanUserDeleteRows="True" 
                  CanUserResizeColumns="True" CanUserSortColumns="True" CanUserReorderColumns="False"
                   Margin="10" 
                  IsReadOnly="False"
                  Background="{StaticResource color1}" AutoGenerateColumns="True">
          
            
        </DataGrid>
    </Grid>
</UserControl>
