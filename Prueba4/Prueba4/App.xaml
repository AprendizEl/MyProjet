<Application x:Class="Prueba4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Prueba4"
             StartupUri="/Windows/Window2.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Recursos de Material Design -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Teal.xaml" />


                <!-- Tus diccionarios de estilos -->
                <ResourceDictionary Source="/Stilos/Colores.xaml"/>
                <ResourceDictionary Source="/Stilos/Botones.xaml"/>
                <ResourceDictionary Source="/Stilos/Tabs.xaml"/>

                <ResourceDictionary Source="/Stilos/Style2.xaml"/>
                <ResourceDictionary Source="/Stilos/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>